{% extends "./base_admin.html.twig"  %}

{% block content %}
    <div class = row><h1 class="col-12 display-4">{{ header }}</h1></div>
    <div class="row ml-2" >
    {% for pupil in pupils %}
        <div class="col-3 bg-light border border-success mb-1 ">
            <article class="p-1">
                <div class="text-center" ><a href="mailto:{{ pupil.email}}">{{ pupil.fullname }}</a></div>
                <figure>
                    <img src="{{ asset(pupil.photo) }}" class="figure-img img-fluid w-100" alt="{{ pupil.fullname }}"/>
                    <figcaption class="figure-caption text-center h6">

                        <a href="{{ path('admin_update_pupil',{'id':pupil.id}) }}">
                            <button type="button" class="btn btn-outline-danger mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text-fill" viewBox="0 0 16 16">
                                    <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM5 4h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1 0-1zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1 0-1zm0 2h3a.5.5 0 0 1 0 1H5a.5.5 0 0 1 0-1z"/>
                                </svg>update
                            </button>
                        </a>
                        <a href="{{ path('admin_reset',{'id':pupil.id}) }}">
                            <button type="button" class="btn btn-outline-danger mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-word-fill" viewBox="0 0 16 16">
                                    <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM5.485 4.879l1.036 4.144.997-3.655a.5.5 0 0 1 .964 0l.997 3.655 1.036-4.144a.5.5 0 0 1 .97.242l-1.5 6a.5.5 0 0 1-.967.01L8 7.402l-1.018 3.73a.5.5 0 0 1-.967-.01l-1.5-6a.5.5 0 1 1 .97-.242z"/>
                                </svg>reset
                            </button>
                        </a>
                        <a href="{{ path('admin_delete_pupil',{'id':pupil.id}) }}" title="delete {{ pupil.fullname }}">
                            <button type="button" class="btn btn-outline-danger mt-1"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-x-fill" viewBox="0 0 16 16">
                                    <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM6.854 6.146L8 7.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 8l1.147 1.146a.5.5 0 0 1-.708.708L8 8.707 6.854 9.854a.5.5 0 0 1-.708-.708L7.293 8 6.146 6.854a.5.5 0 1 1 .708-.708z"/>
                                </svg>delete
                            </button>
                        </a>
                    </figcaption>
                </figure>
            </article>
        </div>
    {% endfor %}
    </div>
{% endblock %}