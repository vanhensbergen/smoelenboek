{% for pupil in pupils%}
<div class="col-2 bg-light p-1">
    <div class="w-100 h-100 border border-success rounded">
        <article class="p-1 h-100">

            <figure>
                <figcaption class="figure-caption text-center h6">
                    <a href="{{ path('admin_update_pupil',{'id':pupil.id}) }}" title="wijzig de gegevens van {{ pupil.fullname }}">
                        <button type="button" class="btn btn-outline-danger mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                            </svg>
                        </button>
                    </a>
                    <a href="{{ path('admin_reset',{'id':pupil.id}) }}" title="reset het wachtwoord tot qwerty voor {{ pupil.fullname }}">
                        <button type="button" class="btn btn-outline-danger mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bootstrap-reboot" viewBox="0 0 16 16">
                                <path d="M1.161 8a6.84 6.84 0 1 0 6.842-6.84.58.58 0 0 1 0-1.16 8 8 0 1 1-6.556 3.412l-.663-.577a.58.58 0 0 1 .227-.997l2.52-.69a.58.58 0 0 1 .728.633l-.332 2.592a.58.58 0 0 1-.956.364l-.643-.56A6.812 6.812 0 0 0 1.16 8z"/>
                                <path d="M6.641 11.671V8.843h1.57l1.498 2.828h1.314L9.377 8.665c.897-.3 1.427-1.106 1.427-2.1 0-1.37-.943-2.246-2.456-2.246H5.5v7.352h1.141zm0-3.75V5.277h1.57c.881 0 1.416.499 1.416 1.32 0 .84-.504 1.324-1.386 1.324h-1.6z"/>
                            </svg>
                        </button>
                    </a>
                    <a href="{{ path('admin_delete_pupil',{'id':pupil.id}) }}" title="delete {{ pupil.fullname }}" title="verwijder {{ pupil.fullname }} uit database">
                        <button type="button" class="btn btn-outline-danger mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                        </button>
                    </a>
                </figcaption>
                <img src="{{ asset(pupil.photo) }}" class="figure-img img-fluid w-100" alt="{{ pupil.fullname }}"/>
            </figure>
            <div class="col-12 text-center" ><a href="mailto:{{ pupil.email}}">{{ pupil.fullname }}</a></div>
        </article>
    </div>
</div>
{% endfor %}
