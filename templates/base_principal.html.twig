{% extends 'base.html.twig' %}

{% block nav %}
    <div class="row border border-success">
        <nav class="navbar navbar-expand-lg navbar-light bg-light col-12">
            <a class="navbar-brand" href="#">{{ app.user.fullname }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('principal_home') }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z"/>
                            </svg><span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Leerlingen</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">nieuw</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('principal_home') }}">ongeplaatst</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Team</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('principal_teachers') }}">docenten</a>
                            <a class="dropdown-item" href="{{ path('principal_admins') }}">administratie</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('principle_add_user') }}">nieuw teamlid</a>

                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Klassen</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% for class in classes %}
                                <a class="dropdown-item" href="{{ path('principal_get_class',{'id':class.id}) }}">{{ class.name }}</a>
                            {% endfor %}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">nieuwe klas</a>

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">wijzig profiel</a>
                    </li>
                </ul>
                <form class="form-inline border rounded border-success p-1" method="post" action="#" >
                    <input class="form-control mr-sm-2" type="search" name='search' placeholder="Zoek..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Zoek</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item bg-white rounded border border-success">
                        <a class="nav-link" href="{{ path('app_logout') }}">log uit</a>
                    </li>
                </ul>

            </div>
        </nav>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-2 pt-2 bg-light border border-success ">
            <article >
                <a href="#" title="wijzig eigen profiel">
                <figure>
                    <img class="figure-img img-fluid w-100" src="{{ asset(app.user.photo) }}" alt="app.user.fullname"/>
                </figure>
                </a>
            </article>
        </div>

        <div class="col-10 border border-success">
            {% block content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}