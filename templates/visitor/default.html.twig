{% extends "./base.html.twig" %}
{% block body %}
       <div class="row text-center border border-success"  style="background-image:url('{{asset("img/800.jpg") }}');">
            <div class="col-lg-7 col-sm-12 resp-font" style="background: white;opacity: 0.6;">
                <div class=" font-weight-bold">SVJIT</div>
                <div class=" font-weight-bold">"School Voor Jong ICT Talent"</div>
            </div>
            <div class="col-lg-5 col-sm-12" >
                <article class="row  bg-white border rounded border-success p-2 h-100" >
                    <div class="col-xl-4 col-lg-5 col-md-6 col-sm-6">
                        <figure >
                            <img  src="{{ asset(principal.photo) }}" class="img-fluid w-100"/>
                            <figcaption class="text-center"><a href="mailto:{{ principal.email }}">{{ principal.fullname }}</a>
                                <h6 class="justify-content-center pt-5"><a href="{{ path('app_login')}}" ><button type="button" class="btn btn-outline-success">log in</button></a></h6>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-xl-8 col-lg-7 col-md-6 col-sm-6 text-left">{{ principal.motto|raw}}</div>
                </article>
            </div>
       </div>
        <div class="row mt-2 p-2 ">
            <div class="text-center col-12  resp-big-font">DOCENTEN</div>
            {% for teacher in teachers %}
                <article class="col-xl-2 col-lg-3  col-md-4 col-sm-6 p-2 bg-white border border-success rounded">
                    <div class="text-center"><a href="mailto:{{ teacher.email }}" title="stuur {{ teacher.fullname }} een mailtje">{{ teacher.fullname }}</a></div>
                    <figure class="text-center">
                        <img src="{{ asset(teacher.photo) }}" alt="{{ teacher.fullname }}" class="figure-img img-fluid w-100"/>
                        <figcaption class="text-center" >
                            {% if teacher.mentorclass is not null %}
                                <div >mentor van: {{ teacher.mentorclass.name }}</div>
                            {% endif %}
                        </figcaption>
                    </figure>
                </article>
            {% endfor %}
        </div>
        <div class="row  mt-2 p-2">
            <div class="text-center col-12 resp-big-font">ADMINISTRATIE</div>
            {% for administrator in administrators %}
                <article class="col-xl-2 col-lg-3  col-md-4 col-sm-6 p-2 bg-white border border-success rounded">
                    <figure class="text-center">
                        <img src="{{ asset(administrator.photo) }}" alt="{{ administrator.fullname }}" class="figure-img img-fluid w-100"/>
                        <figcaption class="text-center" title="stuur {{ administrator.firstname }} een mailtje">
                            <a href="mailto:{{ administrator.email }}">{{ administrator.fullname }}</a>
                        </figcaption>
                    </figure>
                </article>
            {% endfor %}
        </div>
{% endblock %}